{
  "name": "ez-box",
  "version": "0.1.0",
  "description": "CLI for creating, reconnecting, and launching E2B sandboxes",
  "main": "dist/src/cli/index.js",
  "types": "dist/src/cli/index.d.ts",
  "bin": {
    "ez-box": "dist/src/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npm run clean && tsgo -p tsconfig.build.json",
    "clean": "node -e \"const fs = require('node:fs'); fs.rmSync('dist', { recursive: true, force: true });\"",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/cli/index.ts",
    "create": "tsx src/cli/index.ts create",
    "connect": "tsx src/cli/index.ts connect",
    "list": "tsx src/cli/index.ts list",
    "command": "tsx src/cli/index.ts command",
    "wipe": "tsx src/cli/index.ts wipe",
    "wipe-all": "tsx src/cli/index.ts wipe-all",
    "test": "vitest run",
    "e2e:live": "tsx scripts/e2e.live.ts",
    "template:build": "tsx templates/build.ts"
  },
  "keywords": [
    "e2b",
    "sandbox",
    "cli",
    "reconnect",
    "opencode"
  ],
  "author": "Shane Bishop",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shanebishop1/ez-box.git"
  },
  "bugs": {
    "url": "https://github.com/shanebishop1/ez-box/issues"
  },
  "homepage": "https://github.com/shanebishop1/ez-box#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "e2b": "^1.12.0",
    "smol-toml": "^1.3.1"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20260223.1",
    "@types/node": "^22.13.10",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
